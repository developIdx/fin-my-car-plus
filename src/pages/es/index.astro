        <h2 class="section-title">{t("features.title")}</h2>
        <div class="features-grid">
          <div class="feature-card">
            <div class="feature-image">
              <img
                src="/images/app/zone-details.jpg"
                alt={t("features.zones.title")}
              />
            </div>
            <div class="feature-content">
              <h3 class="feature-title">
                <span class="text-white">Consulta todas las</span>
                <span class="text-green">Zonas</span>
              </h3>
              <p class="feature-description">
                {t("features.zones.description")}
              </p>
            </div>
          </div>

          <div class="feature-card">
            <div class="feature-image">
              <img
                src="/images/app/tracking.jpg"
                alt={t("features.track.title")}
              />
            </div>
            <div class="feature-content">
              <h3 class="feature-title">
                <span class="text-white">Rastrea tu coche</span>
                <span class="text-blue">siempre</span>
              </h3>
              <p class="feature-description">
                {t("features.track.description")}
              </p>
            </div>
          </div>

          <div class="feature-card">
            <div class="feature-image">
              <img
                src="/images/app/data-manage.jpg"
                alt={t("features.data.title")}
              />
            </div>
            <div class="feature-content">
              <h3 class="feature-title">
                <span class="text-white">Tus</span>
                <span class="text-green">Datos</span>
                <span class="text-white">solo en tu dispositivo</span>
              </h3>
              <p class="feature-description">
                {t("features.data.description")}
              </p>
            </div>
          </div>

          <div class="feature-card">
            <div class="feature-image">
              <img
                src="/images/app/locations.jpg"
                alt={t("features.locations.title")}
              />
            </div>
            <div class="feature-content">
              <h3 class="feature-title">
                <span class="text-white">Guarda tus favoritos</span>
                <span class="text-green">Ubicaciones</span>
              </h3>
              <p class="feature-description">
                {t("features.locations.description")}
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="faq">
      <div class="container">
        <h2 class="section-title">{t("faq.title")}</h2>
        <div class="faq-list">
          <details class="faq-item">
            <summary class="faq-question">{t("faq.q1")}</summary>
            <p class="faq-answer">{t("faq.a1")}</p>
          </details>
          <details class="faq-item">
            <summary class="faq-question">{t("faq.q2")}</summary>
            <p class="faq-answer">{t("faq.a2")}</p>
          </details>
          <details class="faq-item">
            <summary class="faq-question">{t("faq.q3")}</summary>
            <p class="faq-answer">{t("faq.a3")}</p>
          </details>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section class="about">
      <div class="container">
        <h2 class="section-title">{t("about.title")}</h2>
        <p class="about-text">{t("about.description")}</p>
