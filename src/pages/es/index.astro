          </a>
          <a
            href="#"
            class="store-button google"
            onclick="alert('La app est치 actualmente en modo test. Contacta a vtolsolution@gmail.com para acceso a la beta privada.')"
          >
            <svg class="store-icon" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.53,12.9 20.18,13.18L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z"
              ></path>
            </svg>
            <div class="store-text">
              <span class="store-label">Disponible en</span>
              <span class="store-name">Google Play</span>
            </div>
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* Hero Section */
  .hero {
    padding: 4rem 0 6rem;
    overflow: hidden;
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .hero-text {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .hero-title {
    font-size: 3.5rem;
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: -0.03em;
  }

  .title-white {
    color: var(--text-primary);
  }

  .title-green {
    color: var(--accent-green);
    display: block;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--text-secondary);
    max-width: 400px;
  }

  .hero-cta-text {
    font-size: 1rem;
    color: var(--text-muted);
    margin-top: 1rem;
  }

  .hero-image {
    display: flex;
    justify-content: center;
  }

  .phone-mockup {
    position: relative;
    width: 280px;
    border-radius: 40px;
    overflow: hidden;
    box-shadow:
      0 25px 80px rgba(0, 0, 0, 0.5),
      0 0 0 8px rgba(30, 30, 50, 0.8);
    transform: perspective(1000px) rotateY(-5deg);
    transition: transform 0.4s ease;
  }

  .phone-mockup:hover {
    transform: perspective(1000px) rotateY(0deg);
  }

  .phone-mockup img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Download Buttons */
  .download-buttons {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
    flex-wrap: wrap;
  }

  .store-button {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.875rem 1.5rem;
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
    border: 1px solid var(--border-subtle);
  }

  .store-button.apple {
    background: var(--text-primary);
    color: var(--bg-primary);
  }

  .store-button.apple:hover {
    background: #e5e5e5;
    transform: translateY(-2px);
    box-shadow: var(--shadow-button);
  }

  .store-button.google {
    background: var(--bg-card);
    color: var(--text-primary);
  }

  .store-button.google:hover {
    background: var(--bg-card-hover);
    border-color: var(--border-hover);
    transform: translateY(-2px);
  }

  .store-icon {
    width: 28px;
    height: 28px;
  }

  .store-text {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    line-height: 1.2;
  }

  .store-label {
    font-size: 0.7rem;
    opacity: 0.8;
  }

  .store-name {
    font-size: 1.1rem;
    font-weight: 600;
  }

  /* Section Styles */
  .section-title {
    font-size: 2rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 3rem;
    color: var(--text-primary);
  }

  /* Features Section */
  .features {
    padding: 5rem 0;
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(26, 26, 46, 0.3) 100%
    );
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  .feature-card {
    background: var(--bg-card);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .feature-card:hover {
    transform: translateY(-4px);
    border-color: var(--border-hover);
    box-shadow: var(--shadow-card);
  }

  .feature-image {
    width: 100%;
    aspect-ratio: 9/16;
    max-height: 400px;
    overflow: hidden;
  }

  .feature-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: top;
  }

  .feature-content {
    padding: 1.5rem;
  }

  .feature-title {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  .text-white {
    color: var(--text-primary);
  }

  .text-green {
    color: var(--accent-green);
  }

  .text-blue {
    color: var(--accent-blue);
  }

  .feature-description {
    color: var(--text-secondary);
    font-size: 0.95rem;
  }

  /* FAQ Section */
  .faq {
    padding: 5rem 0;
  }

  .faq-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .faq-item {
    background: var(--bg-card);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-md);
    overflow: hidden;
  }

  .faq-question {
    padding: 1.25rem 1.5rem;
    font-weight: 600;
    cursor: pointer;
    color: var(--text-primary);
    display: flex;
    justify-content: space-between;
    align-items: center;
    list-style: none;
  }

  .faq-question::-webkit-details-marker {
    display: none;
  }

  .faq-question::after {
    content: "+";
    font-size: 1.5rem;
    color: var(--accent-green);
    transition: transform 0.3s ease;
  }

  .faq-item[open] .faq-question::after {
    transform: rotate(45deg);
  }

  .faq-answer {
    padding: 0 1.5rem 1.25rem;
    color: var(--text-secondary);
    animation: fadeIn 0.3s ease;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* About Section */
  .about {
    padding: 5rem 0;
    background: linear-gradient(
      180deg,
      rgba(26, 26, 46, 0.3) 0%,
      transparent 100%
    );
  }

  .about-text {
    max-width: 700px;
    margin: 0 auto;
    text-align: center;
    color: var(--text-secondary);
    font-size: 1.1rem;
    line-height: 1.8;
  }

  /* CTA Section */
  .cta {
    padding: 5rem 0;
    background: linear-gradient(
      135deg,
      rgba(0, 210, 106, 0.1) 0%,
      rgba(10, 132, 255, 0.1) 100%
    );
    border-top: 1px solid var(--border-subtle);
    border-bottom: 1px solid var(--border-subtle);
  }

  .cta-content {
    text-align: center;
  }

  .cta-title {
    font-size: 2.5rem;
    font-weight: 800;
    margin-bottom: 0.5rem;
    background: linear-gradient(
      90deg,
      var(--text-primary) 0%,
      var(--accent-green) 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .cta-subtitle {
    color: var(--text-secondary);
    margin-bottom: 2rem;
    font-size: 1.1rem;
  }

  .cta-buttons {
    justify-content: center;
  }

  /* Responsive */
  @media (max-width: 968px) {
    .hero-content {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-text {
      align-items: center;
    }

    .hero-subtitle {
      max-width: 100%;
    }

    .hero-image {
      order: -1;
    }

    .phone-mockup {
      width: 240px;
      transform: none;
    }

    .features-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 600px) {
    .hero {
      padding: 2rem 0 4rem;
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .download-buttons {
      flex-direction: column;
      width: 100%;
    }

    .store-button {
      justify-content: center;
      width: 100%;
    }

    .section-title {
      font-size: 1.75rem;
    }

    .cta-title {
      font-size: 2rem;
    }

    .feature-image {
      max-height: 300px;
    }
  }
</style>
